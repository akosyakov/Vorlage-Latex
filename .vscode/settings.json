{
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.tools": [
        {
            "name": "warning",
            "command": "echo",
            "args": ["ERROR: Document not compiled. Use the preconfigured build task (ctrl+shift+b by default) instead of LaTeX workshop recipes."],
            "env": {}
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "default",
            "tools": [
                "warning"
            ]
        }
    ],
    "statusbar_command.commands": [
        {
            "alignment": "left",
            "tooltip": "Build LaTeX using Docker",
            "text": "$(gear)",
            "command": "workbench.action.tasks.runTask",
            "arguments": [
                "Build LaTeX using Docker"
            ]
        },
        {
            "alignment": "left",
            "tooltip": "Build + Refresh",
            "text": "$(beaker) Build",
            "command": "workbench.action.tasks.runTask",
            "arguments": [
                "Build + Refresh"
            ]
        },
        {
            "alignment": "left",
            "tooltip": "Delete temporary files",
            "text": "$(file)",
            "command": "workbench.action.tasks.runTask",
            "arguments": [
                "Delete temporary files"
            ]
        },
        {
            "alignment": "left",
            "tooltip": "Open main.pdf",
            "text": "$(file-pdf)",
            "command": "latex-workshop.view"
        },
        {
            "alignment": "left",
            "tooltip": "Refresh viewers",
            "text": "$(refresh)",
            "command": "workbench.action.tasks.runTask",
            "arguments": [
                "Refresh Viewer"
            ]
        },
    ]
}